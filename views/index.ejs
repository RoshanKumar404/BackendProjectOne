<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-700">
        <div class="form p-13 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-6 py-2 bg-zinc-600" type="text" name="title"
                    placeholder="Title goes here">
                <textarea class="block w-full rounded-md outline-none resize-none px-6 py-2 mt-5 bg-zinc-600" name="Description"
                    placeholder="Describe your task"></textarea>
                <input type="submit" class="px-4 py-2 mt-5 bg-blue-600" value="Create your task">
            </form>
        </div>

        <% if (files && files.length > 0) { %>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% files.forEach(function(file) { %>
            <div class="task w-72 px-3 py-4 rounded-md bg-zinc-600">
                <h1 class="text-white text-3xl tracking-tighter"><%= file %></h1>
                <a class="text-blue-500 inline-block mt-3" href="./filess/<%= file %>">Read more</a>
                <a  href="/edit/<%=file %>" >edit</a>
            </div>
            
            <% }) %>
        </div>
        <% } else { %>
        <h3 class="text-zinc-500">No tasks created yet</h3>
        <% } %>

    </div>
    <script>
        console.log('Task manager page loaded');
    </script>
</body>

</html>
